<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @flat.title %>
</p>

<p>
  <strong>Address:</strong>
  <%= @flat.address %>
</p>

<p>
  <strong>Day price:</strong>
  <%= @flat.day_price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @flat.description %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @flat.owner_id %>
</p>

<p>
  <strong>Tags:</strong>
  <% @flat.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
</p>

<% if !@flat.pictures.empty? %>
<%= image_tag @flat.pictures.first.file.url(:thumb) %>
<% end %>

<%= link_to 'Edit', edit_flat_path(@flat) %> |
